<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LeapSmoothWpf"
        x:Class="LeapSmoothWpf.MainWindow"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized" FontSize="32">
	<Window.Resources>
		<DataTemplate x:Key="PositionDataTemplate">
			<Ellipse Fill="#FFFF9900" Height="33" Width="33" Margin="-16,-16,0,0" RenderTransformOrigin="0.5,0.5">
				<Ellipse.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform X="{Binding X}" Y="{Binding Y}"/>
					</TransformGroup>
				</Ellipse.RenderTransform>
			</Ellipse>
		</DataTemplate>
		<ItemsPanelTemplate x:Key="PositionsPanelTemplate">
			<Canvas IsItemsHost="True"/>
		</ItemsPanelTemplate>
	</Window.Resources>
	<Window.DataContext>
		<local:AppModel/>
	</Window.DataContext>
	<Grid>
		<TextBlock HorizontalAlignment="Left" Text="{Binding FrameRate, Mode=OneWay, StringFormat=\{0:N2\} f/s}" VerticalAlignment="Top" Margin="20,20,0,0"/>
		<ItemsControl ItemsSource="{Binding TipPositions}" ItemTemplate="{DynamicResource PositionDataTemplate}" ItemsPanel="{DynamicResource PositionsPanelTemplate}"/>
	</Grid>
</Window>
